  <title>Cognitive Bias Codex — Interactive</title>

  <!-- Tailwind CSS (CDN, no build) -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- GSAP -->
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>

  <style>
    html { scroll-behavior: smooth; }
    /* wrapper for image so hotspots position relative to it */
    #codexWrap { width: min(960px, 94%); max-width: 920px; margin: 0 auto; position: relative; }
    #codexImg { width: 100%; display:block; border-radius: 12px; transform-origin: center center; }

    /* hotspot style */
    .hotspot {
      position: absolute;
      transform: translate(-50%, -50%);
      width: 18px; height: 18px;
      border-radius: 999px;
      background: linear-gradient(135deg, rgba(16,185,129,0.95), rgba(6,95,70,0.95));
      box-shadow: 0 6px 18px rgba(6,95,70,0.35);
      cursor: pointer;
      display: flex; align-items: center; justify-content: center;
      z-index: 6;
      outline: 2px solid rgba(255,255,255,0.03);
    }
    /* tooltip using attr(data-label) */
    .hotspot::after {
      content: attr(data-label);
      position: absolute;
      bottom: 130%;
      left: 50%;
      transform: translateX(-50%) translateY(8px) scale(.98);
      background: rgba(0,0,0,0.78);
      color: #fff;
      padding: 6px 10px;
      border-radius: 6px;
      white-space: nowrap;
      font-size: 13px;
      opacity: 0;
      pointer-events: none;
      transition: all .18s ease;
      z-index: 8;
    }
    .hotspot:hover::after { transform: translateX(-50%) translateY(0) scale(1); opacity: 1; }

    /* modal */
    .modal-overlay {
      position: fixed; inset: 0; display: flex; align-items: center; justify-content: center;
      background: rgba(2,6,23,0.6); z-index: 40; padding: 28px;
    }
    .modal-card { width: min(860px, 96%); max-height: 86vh; overflow: auto; border-radius: 12px; }
    /* subtle card shadow */
    .card-shadow { box-shadow: 0 20px 60px rgba(2,6,23,0.7); }
  </style>
</head>
