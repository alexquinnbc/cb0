      <img id="codexImg" src="https://upload.wikimedia.org/wikipedia/commons/6/65/Cognitive_bias_codex_en.svg" alt="Cognitive Bias Codex" />
      <!-- hotspots will be injected here -->
    </section>

    <div class="text-center mb-6">
      <p class="text-slate-400">Click a dot to learn more. Hover for labels.</p>
    </div>

    <!-- Cards: grid -->
    <section id="bias-cards" class="px-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto">
      <!-- cards rendered by JS -->
    </section>
  </main>

